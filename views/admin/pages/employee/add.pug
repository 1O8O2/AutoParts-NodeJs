extends ../../layouts/default.pug
include ../../mixins/alert.pug

block main
    +alert-error(3000)
    +alert-success(3000)

    .container-fluid#container-wrapper
        .card.mb-4
            .card-header.py-3.d-flex.flex-row.align-items-center.justify-content-between
                h6.m-0.font-weight-bold.text-primary Thêm Nhân Viên Mới
            .card-body
                form(action=`${prefixAdmin}/employee/add` method="POST")
                    .row
                        // Cột 1
                        .col-lg-6.order-info-column
                            .form-group
                                label(for="fullName") Họ và Tên 
                                    span.text-danger *
                                input#fullName.form-control(type="text" name="fullName" required)
                            .form-group
                                label(for="gender") Giới Tính 
                                    span.text-danger *
                                select#gender.form-control(name="gender" required)
                                    option(value="Male") Nam
                                    option(value="Female") Nữ
                            .form-group
                                label(for="phone") Số Điện Thoại 
                                    span.text-danger *
                                input#phone.form-control(type="text" name="phone" required)
                            .form-group
                                label(for="email") Email 
                                    span.text-danger *
                                input#email.form-control(type="email" name="email" required)
                            .form-group
                                label(for="citizenId") Số CCCD 
                                    span.text-danger *
                                input#citizenId.form-control(type="text" name="citizenId" required)
                        // Cột 2
                        .col-lg-6.order-info-column
                            .form-group
                                label(for="birthDate") Ngày Sinh 
                                    span.text-danger *
                                input#birthDate.form-control(type="date" name="birthDate" required)
                            .form-group
                                label(for="startDate") Ngày Bắt Đầu Làm Việc 
                                    span.text-danger *
                                input#startDate.form-control(type="date" name="startDate" required)
                            .form-group
                                label(for="address") Địa Chỉ 
                                    span.text-danger *
                                input#address.form-control(type="text" name="address" required)
                            .form-group
                                label(for="educationLevel") Trình Độ Học Vấn 
                                    span.text-danger *
                                input#educationLevel.form-control(type="text" name="educationLevel" required)
                            .form-group.d-flex
                                label.mr-4(for="status") Trạng thái hoạt động 
                                    span.text-danger *
                                .custom-control.custom-switch.ml-4
                                    input#status.custom-control-input(type="checkbox" name="status" value="Active" checked)
                                    label.custom-control-label(for="status") Hoạt động
                    .d-flex.justify-content-end.mt-3
                        button.btn.btn-primary(type="submit") Thêm Nhân Viên
                        a.btn.btn-secondary.ml-2(href=`${prefixAdmin}/employee`) Quay Lại

    // Scroll to top
    a.scroll-to-top.rounded(href="#page-top")
        i.fas.fa-angle-up

block append styles
    style.
        .selected-products {
            max-height: 350px;
            overflow-y: auto;
        }
        
        .selected-item {
            border: 1px solid #ddd;
            padding: 10px;
            margin-bottom: 5px;
            border-radius: 5px;
            display: flex;
            align-items: center;
            justify-content: space-between;
        }
        
        .selected-item span {
            flex-grow: 1;
        }
        
        .order-info-column {
            padding: 15px;
        }
        
        .order-info-column label {
            font-weight: bold;
            margin-bottom: 5px;
        }
        
        .form-control {
            border-radius: 4px;
        }
        
        .form-group {
            margin-bottom: 15px;
        } 